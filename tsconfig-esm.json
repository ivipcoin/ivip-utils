{
    "compilerOptions": {
        "lib": [
            "esnext",
            "dom"
        ],
        "listEmittedFiles": false,
        "noImplicitAny": true,
        "rootDir": "./src",
        "sourceMap": true,
        "module": "ES6",
        "outDir": "./dist/esm",
        "moduleResolution": "node",
        "target": "ES2020",
        "pretty": true,
        "declaration": true,
        "declarationMap": true,
        "declarationDir": "./dist/types",
        "skipLibCheck": false,
        "strict": false,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "noEmitOnError": true,
        "removeComments": false
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}